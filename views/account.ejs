<%- include('partials/header'); %>
    ​
    <h3>Account</h3>
    ​
    <div id="mainAccount" class="container mx-auto">

      <% if (locals.errors && locals.errors.account) { %>
        <% locals.errors.account.forEach(function(error) { %>
          <p class="alert alert-primary" role="alert"><%= error %></p>
        <% }) %>
      <% } %>
      

      <div  class="container mx-auto"> 

        <form action="/account" method="post" enctype="multipart/form-data">
          
          <div class="card-body">
            <h6 class="heading-small text-muted mb-4">User information</h6>
            <div class="pl-lg-4">
            <div class="row">
            <div class="col-lg-6">
            <div class="form-group focused">
              <label class="form-control-label" for="input-displayname">Display name</label>
              <input type="text" name="displayName" placeholder="Display Name">
            </div>
          </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label class="form-control-label" for="input-email">Email address</label>
              <input type="email" name="email" placeholder="Email">
            </div>
          </div>     
          
          <input type="file" name="avatar">
          <br><br>
          <button type="submit">Update</button>
          <input type="submit" value="Submit">
        </form>
      </div>
    ​</div>
  </body>
</html>
